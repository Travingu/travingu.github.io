---
export interface Props {
    title: string;
    date: string;
    summary: string;
    link: string;
    typeOfLink: string;
    skills: string[];
}

const { title, date, summary, link, typeOfLink, skills } = Astro.props as Props
---
<div class="project">
    <h2 id="title">{title}</h2>
    <p id="date">{date}</p>
    <p id="summary">{summary}</p>
    <a id="link" href={link}>{typeOfLink}</a>
    {skills.map((skill) => <p class="skills">{skill}</p>)}
</div>

<style>
    .project {
        margin: 1rem;
        margin-bottom: 2rem;
        background-color: #dcd4f8;
        float: left;
        width: 100%;
        max-width: 40rem;
        padding: 1rem;
        border-radius: 15px;
    }
    
    #date {
        margin: 0;
        color: #414141;
    }

    #title {
        margin: 0;
    }

    #summary {
        font-size: 1rem;
        color: #414141;
    }

    #link {
        color: #f2fdff;
        background-color: #564787;
        padding: 0.4rem;
        border-radius: 20px;
        text-decoration: none;
    }

    .skills {
        border: 1px solid #564787;
        border-radius: 20px;
        padding: 0.4rem;
        margin-left: 1rem;
        width: fit-content;
        color: #564787;
        display: inline-flex;
    }
</style>